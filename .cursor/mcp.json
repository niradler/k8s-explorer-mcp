{
  "mcpServers": {
    "k8s-explorer-dev": {
      "command": "uv",
      "args": [
        "--directory",
        ".",
        "run",
        "k8s_explorer/server.py"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1"
      }
    },
    "k8s-explorer-mcp": {
      "command": "uvx",
      "args": [
        "--no-cache",
       "k8s-explorer-mcp"
      ]
    }
  }
}

